/**
 * Implements hook_block_info().
 */
function enw_mobile_block_info() {
  $blocks = array();
  $blocks['enw_mobile_dashboard'] = array(
    'info' => t('Mobile dashboard'),
  );
  $blocks['enw_mobile_menu_button'] = array(
    'info' => t('Trigger button for mobile main menu'),
  );
  return $blocks;
}

